<Window x:Class="Hotel.DodajRezerwacje"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dodaj Rezerwację" Height="500" Width="400">
    <StackPanel Margin="10">
        <Label>Gość:</Label>
        <ComboBox x:Name="cbGosc"/>

        <Label>Data rozpoczęcia:</Label>
        <DatePicker x:Name="dpPoczatek"/>

        <Label>Data zakończenia:</Label>
        <DatePicker x:Name="dpKoniec"/>

        <Label>Pokój (jeżeli puste zostanie dobrany automatycznie):</Label>
        <ComboBox x:Name="cbPokoj"/>

        <Label>Zakładający rezerwację:</Label>
        <ComboBox x:Name="cbZakladajacy"/>

        <Label>Dodatkowi Goście:</Label>
        <ListBox x:Name="lbDodatkowiGoscie" Height="100" SelectionMode="Multiple"/>

        <Button Content="Utwórz rezerwację" Click="UtworzRezerwacje_Click"/>
    </StackPanel>
</Window>
